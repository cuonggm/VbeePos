<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<definition name="mainlayout"
		template="/views/layout/mainlayout.jsp">
		<put-attribute name="header"
			value="/views/layout/header.jsp" />
		<put-attribute name="leftpane"
			value="/views/layout/leftpane.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/views/layout/footer.jsp" />
	</definition>

	<definition name="simplelayout"
		template="/views/layout/simplelayout.jsp">
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/views/layout/footer.jsp" />
	</definition>

	<!-- Home -->
	<definition name="home" extends="mainlayout">
		<put-attribute name="body" value="/views/home.jsp" />
	</definition>

	<!-- Login -->
	<definition name="login" extends="simplelayout">
		<put-attribute name="header" value="" />
		<put-attribute name="leftpane" value="" />
		<put-attribute name="body"
			value="/views/login/login.jsp" />
	</definition>

	<!-- Gift -->
	<definition name="gift-new" extends="mainlayout">
		<put-attribute name="body" value="/views/gift/new.jsp" />
	</definition>

	<!-- Gift -->
	<definition name="gift-list" extends="mainlayout">
		<put-attribute name="body" value="/views/gift/list.jsp" />
	</definition>

	<!-- Gift -->
	<definition name="received-gifts" extends="mainlayout">
		<put-attribute name="body"
			value="/views/users/receivedGifts.jsp" />
	</definition>

	<!-- Gift -->
	<definition name="sent-gifts" extends="mainlayout">
		<put-attribute name="body"
			value="/views/users/sentGifts.jsp" />
	</definition>
</tiles-definitions>
